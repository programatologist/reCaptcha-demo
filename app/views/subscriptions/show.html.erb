  <div class="alert alert-info">
    <%= @message%>
  </div>

  <%= form_tag('subscribe', method: :post) do%>
    <div style="margin-top: 20%; margin-left: 20%; margin-right: 30%">
      <div class="form-group">
        <%= text_field_tag "email", "", type: :email, class: "form-control",
                                                    placeholder: "Enter email"%>
      </div>
      <div class="form-group">
        <div class="g-recaptcha" data-sitekey="6LdvvDYUAAAAAJgUyH6sCZX2IjXpbdFitBaIxPmF"></div>
      </div>
      <%= submit_tag "Subscribe Now!"%>
    </div>
  <%end%>
